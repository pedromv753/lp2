		<!-- Agrega una tabla con estilos de Bootstrap -->
		<table class="table table-striped">
			<thead>
				<tr>
					<th>idMedicamento</th>
					<th>nombre</th>
					<th>descripcion</th>
					<th>categoria</th>
					<th>precio</th>
					<th>stock</th>
					<th>fechavencimiento</th>
					<th>proveedor</th>
				</tr>
			</thead>
			<tbody>
				<!-- Itera sobre la lista de libros y muestra cada libro -->
				<tr th:each="farmacia : ${farmacia}">
					<td th:text="${farmacia.idMendicamento}"></td>
					<td th:text="${farmacia.nombre}"></td>
					<td th:text="${farmacia.descripcion}"></td>
					<td th:text="${farmacia.categoria}"></td>
					<td th:text="${farmacia.precio}"></td>
					<td th:text="${farmacia.stock}"></td>
					<td th:text="${#dates.format(farmacia.fechavencimiento, 'dd-MM-yyyy')}"></td>
					<td th:text="${farmacia.proveedor}"></td>
					<td>
						<!-- Agrega botones de edición y eliminación con estilos de Bootstrap -->
						<a th:href="@{/farmacia/editar/{id}(id=${farmacia.idMendicamento})}"
							class="btn btn-primary btn-sm">Editar</a>
						<a th:href="@{/farmacia/eliminar/{id}(id=${farmacia.idMendicamento})}"
							class="btn btn-danger btn-sm">Eliminar</a>
					</td>
				</tr>
			</tbody>
		</table>
		<a th:href="@{/libros/nuevo}" class="btn btn-success">Nuevo medicamento</a>
